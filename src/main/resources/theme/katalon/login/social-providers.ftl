<#macro show social>
  <div class="login-footer-band mt-4">
      <span class="login-footer-helper-text text-center d-block mb-3">
          ${msg("identity-provider-login-label")}
      </span>
  </div>
  <div id="kc-social-providers" class="social-providers-section">
      <ul class="list-unstyled social-providers-list <#if social.providers?size gt 3>social-providers-grid</#if>">
