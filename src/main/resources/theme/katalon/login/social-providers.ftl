              <li class="<#if social.providers?size gt 3>social-provider-grid-item<#else>social-provider-list-item mb-2</#if>">
                  <a data-once-link data-disabled-class="btn-disabled" id="social-${p.alias}"
                          class="btn btn-outline-secondary w-100 social-provider-btn" aria-label="${p.displayName}"
                          type="button" href="${p.loginUrl}">
                        <#if p.iconClasses?has_content>
                            <span class="${p.iconClasses!} me-2">${p.displayName!}</span>
                        <#else>
